<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primary_gradient"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.RegsiterPinActivity"
    tools:showIn="@layout/activity_regsiter_pin">

    <TextView
        android:id="@+id/pin_header_1"
        android:text="@string/pin_header_1"
        android:textColor="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/green_solid_small_round_corner_backgroun"
        android:textSize="@dimen/edit_text_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pin_header_2"
        android:text="@string/pin_header_2"
        android:layout_below="@+id/pin_header_1"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/green_solid_small_round_corner_backgroun"
        android:textSize="@dimen/edit_text_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_btc_address"
        android:text="Company's BTC Address: 123123asdfadasqe4qweqddsc"
        android:layout_below="@+id/pin_header_2"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_amount"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="Amount"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/primary_transparent_round_background"
        android:layout_below="@+id/tv_btc_address"
        android:gravity="top"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        android:theme="@style/MySelectViewTheme"
        android:textSize="@dimen/edit_text_text_size"
        android:paddingBottom="@dimen/edit_text_vertical_padding"
        android:paddingTop="@dimen/edit_text_vertical_padding"
        android:paddingLeft="@dimen/edit_text_horizontal_padding"
        android:paddingRight="@dimen/edit_text_horizontal_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_transaction_hash"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="Transaction Hash"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/primary_transparent_round_background"
        android:layout_below="@+id/edit_amount"
        android:gravity="top"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        android:theme="@style/MySelectViewTheme"
        android:textSize="@dimen/edit_text_text_size"
        android:paddingBottom="@dimen/edit_text_vertical_padding"
        android:paddingTop="@dimen/edit_text_vertical_padding"
        android:paddingLeft="@dimen/edit_text_horizontal_padding"
        android:paddingRight="@dimen/edit_text_horizontal_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_submit"
        android:layout_below="@+id/edit_transaction_hash"
        android:text="Submit"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_solid_small_round_background"
        android:layout_marginTop="30dp"
        android:layout_width="@dimen/small_view_width"
        android:layout_height="wrap_content" />

</RelativeLayout>