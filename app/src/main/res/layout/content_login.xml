<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/primary_gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login"
    tools:context="com.rapidhelp.activities.LoginActivity">

    <RelativeLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo_name"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size" />

        <EditText
            android:layout_below="@id/image_logo"
            android:id="@+id/edit_user_id"
            android:hint="@string/user_id"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:background="@drawable/primary_transparent_round_background"
            android:gravity="center_vertical"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:theme="@style/MySelectViewTheme"
            android:layout_marginTop="40dp"
            android:paddingBottom="@dimen/edit_text_vertical_padding"
            android:paddingTop="@dimen/edit_text_vertical_padding"
            android:paddingLeft="@dimen/edit_text_horizontal_padding"
            android:paddingRight="@dimen/edit_text_horizontal_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_password"
            android:hint="@string/password"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:background="@drawable/primary_transparent_round_background"
            android:layout_below="@+id/edit_user_id"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:theme="@style/MySelectViewTheme"
            android:paddingBottom="@dimen/edit_text_vertical_padding"
            android:paddingTop="@dimen/edit_text_vertical_padding"
            android:paddingLeft="@dimen/edit_text_horizontal_padding"
            android:paddingRight="@dimen/edit_text_horizontal_padding"
            android:layout_marginTop="@dimen/edit_password_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_login"
            android:layout_below="@+id/edit_password"
            android:text="@string/login"
            android:elevation="8dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/white_solid_small_round_background"
            android:layout_marginTop="@dimen/btn_login_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_forgot_password"
            android:layout_below="@+id/btn_login"
            android:layout_marginTop="@dimen/text_forgot_password_margin_top"
            android:text="@string/forgot_your_password"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btn_register"
            android:text="Direct Register With BTC"
            android:textColor="@color/white"
            android:background="@drawable/white_stroke_small_round_background"
            android:layout_marginTop="@dimen/btn_login_margin_top"
            android:elevation="8dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
