<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/primary_transparent_round_background"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_query_label"
        android:textColor="@color/white"
        android:textSize="@dimen/list_label_text_size"
        android:text="Query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_query"
        android:textColor="@color/white"
        android:textSize="@dimen/list_value_text_size"
        android:text="Vipin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:weightSum="2"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_date_label"
                android:textColor="@color/white"
                android:textSize="@dimen/list_label_text_size"
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_date"
                android:textColor="@color/white"
                android:textSize="@dimen/list_value_text_size"
                android:text="Vipin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_action_label"
                android:textColor="@color/white"
                android:textSize="@dimen/list_label_text_size"
                android:text="Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_action"
                android:textColor="@color/white"
                android:textSize="@dimen/list_value_text_size"
                android:text="Gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>