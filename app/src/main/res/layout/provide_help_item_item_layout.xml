<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/primary_transparent_round_background"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_id_label"
                android:textColor="@color/white"
                android:textSize="@dimen/list_label_text_size"
                android:text="ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_id"
                android:layout_below="@+id/text_name_label"
                android:textColor="@color/white"
                android:textSize="@dimen/list_value_text_size"
                android:text="Vipin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_status_label"
                android:textColor="@color/white"
                android:textSize="@dimen/list_label_text_size"
                android:text="Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_status"
                android:textColor="@color/white"
                android:textSize="@dimen/list_value_text_size"
                android:text="Vipin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_reg_date_label"
                android:textColor="@color/white"
                android:textSize="@dimen/list_label_text_size"
                android:text="Creation Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_creation_date"
                android:layout_below="@+id/text_name_label"
                android:textColor="@color/white"
                android:textSize="@dimen/list_value_text_size"
                android:text="Vipin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_completion_date_label"
                android:textColor="@color/white"
                android:textSize="@dimen/list_label_text_size"
                android:text="Completion Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_completion_date"
                android:layout_below="@+id/text_user_id_label"
                android:textColor="@color/white"
                android:textSize="@dimen/list_value_text_size"
                android:text="Gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>