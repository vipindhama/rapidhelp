<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/primary_gradient"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_register"
    tools:context=".activities.RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_login_label"
            android:textColor="@color/white"
            android:text="REGISTER"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_full_name"
            android:hint="Name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:theme="@style/MySelectViewTheme"
            android:textSize="@dimen/edit_text_text_size"
            android:paddingBottom="@dimen/edit_text_vertical_padding"
            android:paddingTop="@dimen/edit_text_vertical_padding"
            android:paddingLeft="@dimen/edit_text_horizontal_padding"
            android:paddingRight="@dimen/edit_text_horizontal_padding"
            android:background="@drawable/primary_transparent_round_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_password"
            android:hint="@string/password"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/primary_transparent_round_background"
            android:layout_below="@+id/edit_mobile"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:theme="@style/MySelectViewTheme"
            android:textSize="@dimen/edit_text_text_size"
            android:paddingBottom="@dimen/edit_text_vertical_padding"
            android:paddingTop="@dimen/edit_text_vertical_padding"
            android:paddingLeft="@dimen/edit_text_horizontal_padding"
            android:paddingRight="@dimen/edit_text_horizontal_padding"
            android:layout_marginTop="@dimen/register_view_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_conf_password"
            android:hint="@string/conf_password"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/primary_transparent_round_background"
            android:layout_below="@+id/edit_password"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:theme="@style/MySelectViewTheme"
            android:textSize="@dimen/edit_text_text_size"
            android:paddingBottom="@dimen/edit_text_vertical_padding"
            android:paddingTop="@dimen/edit_text_vertical_padding"
            android:paddingLeft="@dimen/edit_text_horizontal_padding"
            android:paddingRight="@dimen/edit_text_horizontal_padding"
            android:layout_marginTop="@dimen/register_view_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_mobile"
            android:hint="Phone Number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/primary_transparent_round_background"
            android:layout_below="@+id/edit_email"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:imeOptions="actionNext"
            android:theme="@style/MySelectViewTheme"
            android:textSize="@dimen/edit_text_text_size"
            android:layout_marginTop="@dimen/register_view_margin_top"
            android:paddingBottom="@dimen/edit_text_vertical_padding"
            android:paddingTop="@dimen/edit_text_vertical_padding"
            android:paddingLeft="@dimen/edit_text_horizontal_padding"
            android:paddingRight="@dimen/edit_text_horizontal_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_email"
            android:hint="@string/email"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/primary_transparent_round_background"
            android:layout_below="@+id/edit_full_name"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:theme="@style/MySelectViewTheme"
            android:layout_marginTop="@dimen/register_view_margin_top"
            android:textSize="@dimen/edit_text_text_size"
            android:paddingBottom="@dimen/edit_text_vertical_padding"
            android:paddingTop="@dimen/edit_text_vertical_padding"
            android:paddingLeft="@dimen/edit_text_horizontal_padding"
            android:paddingRight="@dimen/edit_text_horizontal_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/sponsor_label"
            android:layout_marginTop="@dimen/register_view_margin_top"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_sponsor_id"
            android:hint="Sponsor ID"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/primary_transparent_round_background"
            android:layout_below="@+id/edit_full_name"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:theme="@style/MySelectViewTheme"
            android:textSize="@dimen/edit_text_text_size"
            android:paddingBottom="@dimen/edit_text_vertical_padding"
            android:paddingTop="@dimen/edit_text_vertical_padding"
            android:paddingLeft="@dimen/edit_text_horizontal_padding"
            android:paddingRight="@dimen/edit_text_horizontal_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/trans_hash"
            android:layout_marginTop="@dimen/register_view_margin_top"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_transaction_hash"
            android:hint="Transaction Hash"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/primary_transparent_round_background"
            android:layout_below="@+id/edit_full_name"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:theme="@style/MySelectViewTheme"
            android:textSize="@dimen/edit_text_text_size"
            android:paddingBottom="@dimen/edit_text_vertical_padding"
            android:paddingTop="@dimen/edit_text_vertical_padding"
            android:paddingLeft="@dimen/edit_text_horizontal_padding"
            android:paddingRight="@dimen/edit_text_horizontal_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="@dimen/register_view_margin_top"
            android:paddingBottom="@dimen/edit_text_vertical_padding"
            android:paddingTop="@dimen/edit_text_vertical_padding"
            android:background="@drawable/primary_transparent_round_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_country"
                app:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.AppCompatSpinner>

        </RelativeLayout>



        <TextView
            android:id="@+id/tv_choose_package_label"
            android:textColor="@color/white"
            android:text="Choose a package"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


