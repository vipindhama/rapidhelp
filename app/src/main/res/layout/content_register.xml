                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_third_get_help_amount"
                            android:padding="12dp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:background="@drawable/green_solid_small_round_corner_backgroun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_platinum_label"
                    android:textColor="@color/white"
                    android:text="PLATINUM"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/platinum_unselected_circle"
                    android:layout_below="@+id/tv_platinum_label"
                    android:background="@drawable/white_solid_circle"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <View
                    android:id="@+id/platinum_selected_circle"
                    android:visibility="gone"
                    android:layout_below="@+id/tv_platinum_label"
                    android:background="@drawable/primary_solid_circle"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/tv_platinum_joining_amount"
                    android:textColor="@color/white"
                    android:text="Joining Amount"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_platinum_provide_help_amount"
                    android:textColor="@color/white"
                    android:text="Provide Help"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_platinum_get_help_amount"
                    android:textColor="@color/white"
                    android:text="Get Help"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

